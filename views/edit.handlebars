    <form action="/todos/{{todo.id}}?_method=PUT" method="POST" style="display:inline;">
        <div class="input-group">
                <div class="input-group-text">
                    <input name="isDone" class="form-check-input mt-0" type="checkbox" {{#if todo.isDone}}checked{{/if}}>
                </div>
            <input type="text" class="form-control" placeholder="name" name="name" value="{{todo.name}}">
            <button class="btn btn-success" type="submit">Save!</button>
        </div>
    </form>